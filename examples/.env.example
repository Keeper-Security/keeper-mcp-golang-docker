# KSM MCP Environment Variables Example
# Copy this file to .env and customize

# General settings
KSM_MCP_CONFIG_DIR=/home/keeper/.config/ksm-mcp
KSM_MCP_LOG_DIR=/var/log/ksm-mcp

# Profile configuration
KSM_MCP_PROFILE=production
KSM_MCP_DEFAULT_PROFILE=production

# Logging
KSM_MCP_LOG_LEVEL=info
KSM_MCP_LOG_FORMAT=json
KSM_MCP_AUDIT_ENABLED=true

# Security
KSM_MCP_BATCH_MODE=false
KSM_MCP_AUTO_APPROVE=false
KSM_MCP_CONFIRMATION_TIMEOUT=30s
KSM_MCP_SESSION_TIMEOUT=15m

# Rate limiting
KSM_MCP_RATE_LIMIT_RPM=60
KSM_MCP_RATE_LIMIT_RPH=1000

# Server settings
KSM_MCP_HOST=0.0.0.0
KSM_MCP_PORT=8080
KSM_MCP_TIMEOUT=30s

# Development (set to true only in dev)
KSM_MCP_DEBUG=false
KSM_MCP_MOCK_MODE=false

# Docker specific
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=ksm-mcp

# Credentials (use Docker secrets in production!)
# KSM_ONE_TIME_TOKEN=US:your_token_here
# KSM_CONFIG_FILE=/path/to/config.json
# KSM_MASTER_PASSWORD=your_secure_password

# Monitoring
KSM_MCP_METRICS_ENABLED=false
KSM_MCP_METRICS_PORT=9090
KSM_MCP_HEALTH_ENABLED=true

# Feature flags
KSM_MCP_EXPERIMENTAL=false
KSM_MCP_BULK_OPERATIONS=false

# Environment
KSM_MCP_ENV=production